<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Transaction" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
         <item name="colorPrimary">@color/Vista_Blue</item>
        <!-- color of icons -->
        <item name="colorControlNormal">@color/white</item>
        <!-- color of ripple effect -->
        <item name="colorPrimaryDark">@color/Periwinkle</item>
        <!-- Status bar color. -->
        <!-- Text Colors -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/sonic_silver</item>
        <!-- Text attributes -->
        <item name="textAllCaps">false</item>
        <item name="android:statusBarColor">@color/Night</item>

    </style>

    <color name="account_filed">#80333333</color>

    <color name="bottom_sheet">#23202A</color>

    <style name="general_view">
        <item name="android:elevation">1dp</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="otp_edit_text_without_margin" parent="general_view">
        <item name="android:background">@drawable/input_filed</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="otp_edit_text" parent="otp_edit_text_without_margin">
        <item name="android:layout_marginHorizontal">5dp</item>
    </style>

    <style name="edit_text">
        <item name="android:inputType">text|datetime</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/input_filed</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="cardViewStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="android:padding">@dimen/padding</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="android:layout_marginHorizontal">@dimen/margin</item>
    </style>

    <style name="outlinedCardViewStyle" parent="Widget.Material3.CardView.Outlined">
        <item name="strokeColor">?colorPrimary</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="android:layout_marginHorizontal">@dimen/margin</item>
    </style>

    <style name="outlinedCardViewStyleWithoutMargin">
        <item name="strokeColor">@color/account_filed</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="single_line">
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">inherit</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="not_focusable_clickable">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="focusable_clickable">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_out_animation</item>
    </style>

</resources>